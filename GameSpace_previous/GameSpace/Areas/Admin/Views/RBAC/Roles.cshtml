@model IEnumerable<GameSpace.Models.ManagerRolePermission>
@{
    ViewData["Title"] = "角色管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>角色管理</h2>
    <a asp-action="CreateRole" class="btn btn-primary">
        <i class="fas fa-plus"></i> 創建新角色
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>角色ID</th>
                        <th>角色名稱</th>
                        <th>管理員權限管理</th>
                        <th>用戶狀態管理</th>
                        <th>購物權限管理</th>
                        <th>訊息權限管理</th>
                        <th>寵物權限管理</th>
                        <th>客服權限</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.ManagerRoleId</td>
                            <td>
                                <strong>@role.RoleName</strong>
                            </td>
                            <td>
                                @if (role.AdministratorPrivilegesManagement == true)
                                {
                                    <span class="badge bg-success">是</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">否</span>
                                }
                            </td>
                            <td>
                                @if (role.UserStatusManagement == true)
                                {
                                    <span class="badge bg-success">是</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">否</span>
                                }
                            </td>
                            <td>
                                @if (role.ShoppingPermissionManagement == true)
                                {
                                    <span class="badge bg-success">是</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">否</span>
                                }
                            </td>
                            <td>
                                @if (role.MessagePermissionManagement == true)
                                {
                                    <span class="badge bg-success">是</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">否</span>
                                }
                            </td>
                            <td>
                                @if (role.PetRightsManagement == true)
                                {
                                    <span class="badge bg-success">是</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">否</span>
                                }
                            </td>
                            <td>
                                @if (role.CustomerService == true)
                                {
                                    <span class="badge bg-success">是</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">否</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="EditRole" asp-route-id="@role.ManagerRoleId" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> 編輯
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-shield-alt fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">尚無角色</h4>
        <p class="text-muted">點擊上方「創建新角色」按鈕來創建第一個角色</p>
    </div>
}