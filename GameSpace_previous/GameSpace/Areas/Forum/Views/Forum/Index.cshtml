@model List<GameSpace.Models.Forum>
@{
    ViewData["Title"] = "論壇";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>論壇</h2>
                <a href="@Url.Action("Create")" class="btn btn-primary glass-button">
                    <i class="fas fa-plus me-2"></i>創建論壇
                </a>
            </div>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <!-- 搜尋功能 -->
        <div class="col-12 mb-4">
            <div class="glass-card p-4">
                <form asp-action="Search" method="get" class="row g-3">
                    <div class="col-md-8">
                        <input type="text" name="keyword" class="form-control glass-input" placeholder="搜尋討論串或文章..." value="@ViewBag.Keyword">
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-outline-primary w-100">
                            <i class="fas fa-search me-2"></i>搜尋
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- 論壇列表 -->
        <div class="col-12">
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var forum in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="glass-card p-4 h-100">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="mb-0">@forum.Name</h5>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="@Url.Action("Edit", new { id = forum.ForumId })">Edit</a></li>
                                            <li><a class="dropdown-item text-danger" href="@Url.Action("Delete", new { id = forum.ForumId })" onclick="return confirm('Are you sure you want to delete this forum?')">Delete</a></li>
                                        </ul>
                                    </div>
                                </div>
                                
                                <p class="text-muted mb-3">@forum.Description</p>
                                
                                @if (forum.Game != null)
                                {
                                    <div class="mb-3">
                                        <span class="badge bg-primary">@forum.Game.Name</span>
                                    </div>
                                }
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-comments me-1"></i>
                                        @forum.Threads.Count threads
                                    </small>
                                    <a href="@Url.Action("Details", new { id = forum.ForumId })" class="btn btn-sm btn-outline-primary">
                                        Enter Forum
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-comments fa-4x text-muted mb-4"></i>
                    <h3 class="text-muted">No Forums Yet</h3>
                    <p class="text-muted">Create the first forum!</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary glass-button">
                        <i class="fas fa-plus me-2"></i>Create Forum
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
.glass-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(14px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
}

.glass-button {
    background: linear-gradient(45deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 10px;
    padding: 12px 24px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.glass-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.glass-input {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    color: white;
}

.glass-input:focus {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25);
    color: white;
}

.glass-input::placeholder {
    color: rgba(255, 255, 255, 0.7);
}

body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
}

.dropdown-menu {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
}

.dropdown-item:hover {
    background: rgba(255, 255, 255, 0.2);
}
</style>