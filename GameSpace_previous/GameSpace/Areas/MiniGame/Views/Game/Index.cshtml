document.addEventListener('DOMContentLoaded', function() {
    // 載入遊戲列表的邏輯將在後續階段實作
    console.log('遊戲大廳已載入');
    
    // 為遊戲卡片添加點擊效果
    const gameCards = document.querySelectorAll('.game-card');
    gameCards.forEach(card => {
        card.addEventListener('click', function() {
            // 遊戲選擇邏輯將在後續階段實作
        });
    });
});
</script>