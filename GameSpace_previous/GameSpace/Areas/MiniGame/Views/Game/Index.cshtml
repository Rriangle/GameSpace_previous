@model GameSpace.Areas.MiniGame.Models.GameHallDisplayViewModel
@{
    ViewData["Title"] = "小遊戲大廳";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">@ViewData["Title"]</h2>
        </div>
    </div>

    <!-- 個人遊戲統計 -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">今日遊戲</h5>
                    <h3 class="text-primary">@Model.TodayGameCount</h3>
                    <p class="card-text">次</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">今日獲得積分</h5>
                    <h3 class="text-success">@Model.TodayPointsEarned.ToString("N0")</h3>
                    <p class="card-text">分</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">最高分數</h5>
                    <h3 class="text-warning">@Model.HighestScore.ToString("N0")</h3>
                    <p class="card-text">分</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">遊戲等級</h5>
                    <h3 class="text-info">@Model.CurrentGameLevel</h3>
                    <p class="card-text">級</p>
                </div>
            </div>
        </div>
    </div>

    <!-- 可用遊戲列表 -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">可玩遊戲</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var game in Model.AvailableGames)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card game-card">
                                    <div class="card-body text-center">
                                        <i class="@game.IconClass fa-3x mb-3"></i>
                                        <h5 class="card-title">@game.GameName</h5>
                                        <p class="card-text">@game.Description</p>
                                        <div class="mb-3">
                                            <span class="badge bg-primary">積分獎勵: @game.PointsReward</span>
                                            <span class="badge bg-secondary">
                                                難度: @(new string('★', game.DifficultyLevel))@(new string('☆', 5 - game.DifficultyLevel))
                                            </span>
                                        </div>
                                        @if (game.IsEnabled)
                                        {
                                            <a asp-action="Play" asp-route-id="@game.GameId" class="btn btn-primary">
                                                <i class="fas fa-play me-2"></i>開始遊戲
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary" disabled>
                                                <i class="fas fa-lock me-2"></i>暫時關閉
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 最近遊戲記錄 -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">最近遊戲記錄</h5>
                    <a asp-action="History" class="btn btn-sm btn-outline-secondary">查看全部</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>遊戲</th>
                                    <th>分數</th>
                                    <th>等級</th>
                                    <th>獲得積分</th>
                                    <th>遊戲時間</th>
                                    <th>日期</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentGameHistory.Any())
                                {
                                    @foreach (var game in Model.RecentGameHistory)
                                    {
                                        @{
                                            var gameInfo = Model.AvailableGames.FirstOrDefault(g => g.GameId == game.PlayID % 3 + 1);
                                            var duration = game.EndTime.HasValue ? game.EndTime.Value - game.StartTime : TimeSpan.Zero;
                                        }
                                        <tr>
                                            <td>
                                                @if (gameInfo != null)
                                                {
                                                    <i class="@gameInfo.IconClass me-2"></i>@gameInfo.GameName
                                                }
                                                else
                                                {
                                                    <i class="fas fa-gamepad me-2"></i>未知遊戲
                                                }
                                            </td>
                                            <td>@((game.Level * 50 + game.ExpGained * 10).ToString("N0"))</td>
                                            <td>@game.Level</td>
                                            <td class="text-success">+@game.PointsGained</td>
                                            <td>@duration.ToString(@"mm\:ss")</td>
                                            <td>@game.StartTime.ToString("yyyy/MM/dd")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <i class="fas fa-gamepad fa-3x text-muted mb-3"></i>
                                            <h5 class="text-muted">目前沒有遊戲記錄</h5>
                                            <p class="text-muted">開始第一場遊戲來建立記錄</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.game-card {
    border: 2px solid transparent;
    transition: all 0.3s ease;
}

.game-card:hover {
    border-color: #0d6efd;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    transform: translateY(-2px);
}

.game-card .fas {
    transition: transform 0.3s ease;
}

.game-card:hover .fas {
    transform: scale(1.1);
}
</style>

