@model GameSpace.Areas.MiniGame.Models.PetStatusDisplayViewModel
@{
    ViewData["Title"] = "寵物詳細資訊";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">@ViewData["Title"] - @Model.Pet.PetName</h2>
            
            <!-- 返回按鈕 -->
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>返回寵物頁面
                </a>
            </div>
        </div>
    </div>

    <!-- 寵物基本資訊 -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">基本資訊</h5>
                </div>
                <div class="card-body text-center">
                    <div class="pet-avatar mb-3" style="background-color: @Model.Pet.BackgroundColor; padding: 20px; border-radius: 10px;">
                        <div style="width: 120px; height: 120px; background-color: @Model.Pet.SkinColor; border-radius: 50%; margin: 0 auto; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-dragon fa-3x text-white"></i>
                        </div>
                    </div>
                    <h4 class="mb-2">@Model.Pet.PetName</h4>
                    <p class="text-muted">編號 #@Model.Pet.PetID.ToString("000")</p>
                    
                    <div class="row text-center mt-3">
                        <div class="col-6">
                            <div class="text-muted">等級</div>
                            <h3 class="text-primary">Lv.@Model.Pet.Level</h3>
                        </div>
                        <div class="col-6">
                            <div class="text-muted">整體評分</div>
                            <h3 class="text-success">@Model.OverallHealthScore</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- 詳細屬性 -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">詳細屬性</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <h6 class="text-muted">成長屬性</h6>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small>經驗值</small>
                                    <small>@Model.Pet.Experience / @Model.NextLevelExpRequired</small>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-primary" style="width: @Model.ExpProgressPercentage%"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small>健康值</small>
                                    <small>@Model.Pet.Health / 100</small>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-success" style="width: @Model.Pet.Health%"></div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <h6 class="text-muted">狀態屬性</h6>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small>飢餓度 (@Model.HungerStatus)</small>
                                    <small>@Model.Pet.Hunger / 100</small>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-warning" style="width: @Model.Pet.Hunger%"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small>心情值 (@Model.MoodStatus)</small>
                                    <small>@Model.Pet.Mood / 100</small>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-info" style="width: @Model.Pet.Mood%"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small>體力值</small>
                                    <small>@Model.Pet.Stamina / 100</small>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-danger" style="width: @Model.Pet.Stamina%"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small>清潔度</small>
                                    <small>@Model.Pet.Cleanliness / 100</small>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-primary" style="width: @Model.Pet.Cleanliness%"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 照顧建議 -->
                    @if (Model.NeedsCare && Model.SuggestedCareActions.Any())
                    {
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-exclamation-triangle me-2"></i>寵物需要照顧</h6>
                            <ul class="mb-0">
                                @foreach (var action in Model.SuggestedCareActions)
                                {
                                    <li>@action</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>

            <!-- 快速操作 -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">快速操作</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <button class="btn btn-warning w-100" onclick="feedPet(@Model.Pet.PetID)">
                                <i class="fas fa-utensils me-2"></i>餵食
                                <br><small>飢餓度 +20</small>
                            </button>
                        </div>
                        <div class="col-md-3 mb-3">
                            <button class="btn btn-info w-100" onclick="playWithPet(@Model.Pet.PetID)">
                                <i class="fas fa-gamepad me-2"></i>陪玩
                                <br><small>心情 +15</small>
                            </button>
                        </div>
                        <div class="col-md-3 mb-3">
                            <button class="btn btn-primary w-100" onclick="cleanPet(@Model.Pet.PetID)">
                                <i class="fas fa-bath me-2"></i>清潔
                                <br><small>清潔度 +25</small>
                            </button>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="Customize" asp-route-id="@Model.Pet.PetID" class="btn btn-success w-100">
                                <i class="fas fa-palette me-2"></i>外觀設定
                                <br><small>個性化寵物</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 升級歷史 -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">升級歷史</h5>
                </div>
                <div class="card-body">
                    @if (Model.LevelUpHistory.Any())
                    {
                        <div class="timeline">
                            @foreach (var levelUp in Model.LevelUpHistory)
                            {
                                <div class="timeline-item mb-3">
                                    <div class="timeline-marker bg-success"></div>
                                    <div class="timeline-content">
                                        <h6>升級到 Lv.@levelUp.Level</h6>
                                        <p class="text-muted mb-1">@levelUp.LevelUpTime.ToString("yyyy/MM/dd HH:mm")</p>
                                        <span class="badge bg-success">獲得積分 +@levelUp.PointsReward</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">暫無升級記錄</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">最近活動</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <i class="@activity.IconClass me-2"></i>
                                            <span>@activity.Description</span>
                                        </div>
                                        <small class="text-muted">
                                            @if (activity.ActivityTime.Date == DateTime.Now.Date)
                                            {
                                                @activity.ActivityTime.ToString("HH:mm")
                                            }
                                            else
                                            {
                                                @activity.ActivityTime.ToString("MM/dd")
                                            }
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">暫無活動記錄</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline-item {
    position: relative;
}

.timeline-marker {
    position: absolute;
    left: -37px;
    top: 8px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 3px solid white;
    box-shadow: 0 0 0 3px #dee2e6;
}

.timeline-content {
    background: #f8f9fa;
    padding: 15px;
    border-radius: 8px;
    border-left: 3px solid #28a745;
}

.timeline::before {
    content: '';
    position: absolute;
    left: -31px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #dee2e6;
}
</style>

<script>
function feedPet(petId) {
    if (confirm('確定要餵食寵物嗎？這將消耗 5 積分。')) {
        // 餵食邏輯將在 Stage 4 實作
        alert('餵食成功！寵物飢餓度 +20');
        location.reload();
    }
}

function playWithPet(petId) {
    if (confirm('確定要與寵物玩耍嗎？這將消耗 3 積分。')) {
        // 陪玩邏輯將在 Stage 4 實作
        alert('陪玩成功！寵物心情 +15');
        location.reload();
    }
}

function cleanPet(petId) {
    if (confirm('確定要為寵物清潔嗎？這將消耗 8 積分。')) {
        // 清潔邏輯將在 Stage 4 實作
        alert('清潔成功！寵物清潔度 +25');
        location.reload();
    }
}

document.addEventListener('DOMContentLoaded', function() {
    // 寵物詳細頁面初始化邏輯
    console.log('寵物詳細頁面已載入，PetID: @Model.Pet.PetID');
});
</script>