<!-- 快捷鍵提示（隱藏但支援螢幕閱讀器） -->
<div class="sr-only" aria-live="polite" id="shortcutHelp">
    <p>鍵盤快捷鍵：Alt+M 開啟功能選單，Alt+W 錢包，Alt+S 簽到，Alt+P 寵物，Alt+G 遊戲</p>
</div>

<script>
// 鍵盤快捷鍵支援
document.addEventListener('keydown', function(e) {
    if (e.altKey) {
        switch(e.key.toLowerCase()) {
            case 'm':
                document.getElementById('miniGameMenuDropdown')?.click();
                e.preventDefault();
                break;
            case 'w':
                window.location.href = '@Url.Action("Index", "UserWallet", new { area = "MiniGame" })';
                e.preventDefault();
                break;
            case 's':
                window.location.href = '@Url.Action("Index", "UserSignInStats", new { area = "MiniGame" })';
                e.preventDefault();
                break;
            case 'p':
                window.location.href = '@Url.Action("Index", "Pet", new { area = "MiniGame" })';
                e.preventDefault();
                break;
            case 'g':
                window.location.href = '@Url.Action("Index", "Game", new { area = "MiniGame" })';
                e.preventDefault();
                break;
        }
    }
});
</script>
