@model GameSpace.Areas.MiniGame.Models.SignInStatsDisplayViewModel
@{
    ViewData["Title"] = "每日簽到";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">@ViewData["Title"]</h2>
        </div>
    </div>

    <!-- 簽到狀態卡片 -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">今日簽到</h5>
                    <div class="my-4">
                        <i class="fas fa-calendar-check fa-4x text-primary"></i>
                    </div>
                    <button class="btn btn-primary btn-lg" id="signInBtn">
                        <i class="fas fa-hand-paper me-2"></i>立即簽到
                    </button>
                    <p class="mt-3 text-muted">點擊按鈕完成今日簽到</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">簽到統計</h5>
                    <div class="row text-center mt-3">
                        <div class="col-4">
                            <h4 class="text-success">@Model.ConsecutiveDays</h4>
                            <small class="text-muted">連續簽到</small>
                        </div>
                        <div class="col-4">
                            <h4 class="text-info">@Model.MonthlySignInDays</h4>
                            <small class="text-muted">本月簽到</small>
                        </div>
                        <div class="col-4">
                            <h4 class="text-warning">@Model.TotalSignInDays</h4>
                            <small class="text-muted">總簽到天數</small>
                        </div>
                    </div>
                    <hr>
                    <div class="text-center">
                        <p class="mb-2"><strong>今日獎勵：</strong></p>
                        <span class="badge bg-primary me-2">積分 +@Model.TodayPointsReward</span>
                        <span class="badge bg-success">經驗值 +@Model.TodayExpReward</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 簽到日曆 -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">本月簽到記錄</h5>
                </div>
                <div class="card-body">
                    <div class="calendar-grid">
                        <div class="row text-center mb-2">
                            <div class="col">日</div>
                            <div class="col">一</div>
                            <div class="col">二</div>
                            <div class="col">三</div>
                            <div class="col">四</div>
                            <div class="col">五</div>
                            <div class="col">六</div>
                        </div>
                        <div class="row text-center">
                            <div class="col"><span class="calendar-day">1</span></div>
                            <div class="col"><span class="calendar-day signed">2</span></div>
                            <div class="col"><span class="calendar-day signed">3</span></div>
                            <div class="col"><span class="calendar-day signed">4</span></div>
                            <div class="col"><span class="calendar-day signed">5</span></div>
                            <div class="col"><span class="calendar-day signed">6</span></div>
                            <div class="col"><span class="calendar-day signed">7</span></div>
                        </div>
                        <div class="row text-center">
                            <div class="col"><span class="calendar-day signed">8</span></div>
                            <div class="col"><span class="calendar-day signed">9</span></div>
                            <div class="col"><span class="calendar-day signed">10</span></div>
                            <div class="col"><span class="calendar-day today">11</span></div>
                            <div class="col"><span class="calendar-day">12</span></div>
                            <div class="col"><span class="calendar-day">13</span></div>
                            <div class="col"><span class="calendar-day">14</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 操作按鈕 -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-action="Statistics" class="btn btn-outline-info">
                <i class="fas fa-chart-bar me-2"></i>查看詳細統計
            </a>
        </div>
    </div>
</div>

<style>
.calendar-day {
    display: inline-block;
    width: 30px;
    height: 30px;
    line-height: 30px;
    border-radius: 50%;
    margin: 2px;
    border: 1px solid #dee2e6;
}

.calendar-day.signed {
    background-color: #198754;
    color: white;
    border-color: #198754;
}

.calendar-day.today {
    background-color: #0d6efd;
    color: white;
    border-color: #0d6efd;
    font-weight: bold;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const signInBtn = document.getElementById('signInBtn');
    
    signInBtn.addEventListener('click', function() {
        // 簽到邏輯將在後續階段實作
        this.disabled = true;
        this.innerHTML = '<i class="fas fa-check me-2"></i>已簽到';
        this.classList.remove('btn-primary');
        this.classList.add('btn-success');
    });
});
</script>