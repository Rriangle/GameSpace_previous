@model GameSpace.Areas.MiniGame.Models.WalletOverviewDisplayViewModel
@{
    ViewData["Title"] = "我的錢包";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">@ViewData["Title"]</h2>
        </div>
    </div>

    <!-- 錢包概覽卡片 -->
    <div class="row">
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">目前積分</h5>
                    <h3 class="text-primary">@Model.CurrentPoints.ToString("N0")</h3>
                    <p class="card-text">可用於兌換獎品</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">可用優惠券</h5>
                    <h3 class="text-success">@Model.AvailableCouponsCount</h3>
                    <p class="card-text">尚未使用的優惠券</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">電子禮券</h5>
                    <h3 class="text-warning">@Model.AvailableEVouchersCount</h3>
                    <p class="card-text">可兌換的電子禮券</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">本月消費</h5>
                    <h3 class="text-info">@Model.MonthlyPointsSpent.ToString("N0")</h3>
                    <p class="card-text">積分消費統計</p>
                </div>
            </div>
        </div>
    </div>

    <!-- 快速操作按鈕 -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">快速操作</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a asp-action="Points" class="btn btn-outline-primary">積分明細</a>
                        <a asp-action="Coupons" class="btn btn-outline-success">我的優惠券</a>
                        <a asp-action="EVouchers" class="btn btn-outline-warning">電子禮券</a>
                        <a asp-action="History" class="btn btn-outline-info">交易記錄</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 最近交易紀錄 -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">最近交易</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>日期</th>
                                    <th>類型</th>
                                    <th>積分變動</th>
                                    <th>說明</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model.RecentTransactions)
                                {
                                    <tr>
                                        <td>@transaction.ChangeTime.ToString("yyyy/MM/dd HH:mm")</td>
                                        <td>
                                            @if (transaction.PointsChanged > 0)
                                            {
                                                <span class="badge bg-success">@transaction.ChangeType</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">@transaction.ChangeType</span>
                                            }
                                        </td>
                                        <td class="@(transaction.PointsChanged > 0 ? "text-success" : "text-danger")">
                                            @(transaction.PointsChanged > 0 ? "+" : "")@transaction.PointsChanged
                                        </td>
                                        <td>@transaction.Description</td>
                                    </tr>
                                }
                                @if (!Model.RecentTransactions.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">目前沒有交易記錄</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center">
                        <a asp-action="History" class="btn btn-sm btn-outline-secondary">查看全部記錄</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>