@model IEnumerable<GameSpace.Areas.social_hub.Models.ViewModels.NotificationViewModel>

@{
    ViewData["Title"] = "Notification List";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-secondary">No notifications currently.</div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Notification ID</th>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Source</th>
                                <th>Action</th>
                                <th>Sender</th>
                                <th>Created Time</th>
                                <th>Read</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var n in Model)
                            {
                                <tr>
                                    <td>@n.NotificationId</td>
                                    <td>@(n.NotificationTitle ?? "Not Set")</td>
                                    <td>@(n.NotificationMessage ?? "")</td>
                                    <td>@(n.SourceName ?? "Not Set")</td>
                                    <td>@(n.ActionName ?? "Not Set")</td>
                                    <td>@(n.SenderName ?? "System")</td>
                                    <td>@n.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>@(n.IsRead ? "Yes" : "No")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-3 d-flex">
        <a asp-action="Create" class="btn btn-primary mr-2">Add Notification</a>
        <a asp-action="TestNotification" class="btn btn-outline-secondary">Quick Add Test Notification</a>
    </div>
</div>
