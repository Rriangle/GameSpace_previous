@model IEnumerable<GameSpace.Core.Models.EVoucherType>

@{
    ViewData["Title"] = "禮券類型管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">禮券類型管理</h1>
    <a href="@Url.Action("Create")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> 新增禮券類型
    </a>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">禮券類型列表</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>類型名稱</th>
                        <th>描述</th>
                        <th>狀態</th>
                        <th>創建時間</th>
                        <th>更新時間</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TypeName</td>
                            <td>@item.Description</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-success">啟用</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">停用</span>
                                }
                            </td>
                            <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@item.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <a href="@Url.Action("Details", new { id = item.TypeID })" class="btn btn-info btn-sm">詳情</a>
                                <a href="@Url.Action("Edit", new { id = item.TypeID })" class="btn btn-warning btn-sm">編輯</a>
                                <a href="@Url.Action("Delete", new { id = item.TypeID })" class="btn btn-danger btn-sm">刪除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
