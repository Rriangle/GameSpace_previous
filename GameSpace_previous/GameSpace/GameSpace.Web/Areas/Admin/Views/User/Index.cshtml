@model IEnumerable<GameSpace.Core.Models.User>

@{
    ViewData["Title"] = "用戶管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">用戶管理</h1>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">用戶列表</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>用戶ID</th>
                        <th>用戶名</th>
                        <th>電子郵件</th>
                        <th>電話</th>
                        <th>創建時間</th>
                        <th>最後登入</th>
                        <th>狀態</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserID</td>
                            <td>@item.Username</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(item.LastLoginAt?.ToString("yyyy-MM-dd HH:mm") ?? "從未登入")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-success">啟用</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">停用</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { id = item.UserID })" class="btn btn-info btn-sm">詳情</a>
                                <a href="@Url.Action("Edit", new { id = item.UserID })" class="btn btn-warning btn-sm">編輯</a>
                                <a href="@Url.Action("Delete", new { id = item.UserID })" class="btn btn-danger btn-sm">刪除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>
