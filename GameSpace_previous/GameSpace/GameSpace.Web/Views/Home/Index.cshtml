@{
    ViewData["Title"] = "GameSpace - Gaming Community Platform";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Welcome to GameSpace</h1>
            <p class="lead">A comprehensive gaming community platform that integrates game discussions, pet raising, check-in rewards, and store transactions</p>
            
            @if (ViewBag.UserCount != null)
            {
                <div class="alert alert-info">
                    <h4>Platform Statistics</h4>
                    <p>Current registered users: <strong>@ViewBag.UserCount</strong></p>
                </div>
            }
            
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-warning">
                    <p>System message: @ViewBag.Error</p>
                </div>
            }
            
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Game Forum</h5>
                            <p class="card-text">Discuss game experiences, share strategies, and exchange knowledge with other players</p>
                            <a href="#" class="btn btn-primary">Enter Forum</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Pet Raising</h5>
                            <p class="card-text">Raise cute slime pets and level them up through interactions</p>
                            <a href="#" class="btn btn-primary">My Pet</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Official Store</h5>
                            <p class="card-text">Purchase game merchandise, digital goods, and exchange points for coupons</p>
                            <a href="#" class="btn btn-primary">Enter Store</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
