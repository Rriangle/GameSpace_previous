@{
    ViewData["Title"] = "Pet Home";
}

<div class="container mt-4">
    <h1>My Pet</h1>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    else
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Pet Information</h5>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Pet != null)
                        {
                            <p>Pet Name: @ViewBag.Pet.Pet_Name</p>
                            <p>Level: @ViewBag.Pet.Pet_Level</p>
                            <p>Experience: @ViewBag.Pet.Pet_Exp</p>
                        }
                        else
                        {
                            <p>No pet owned yet</p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Wallet Balance</h5>
                    </div>
                    <div class="card-body">
                        <p>Points: @ViewBag.WalletBalance</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
