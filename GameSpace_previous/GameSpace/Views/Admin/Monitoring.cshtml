@{
    ViewData["Title"] = "系統監控";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">系統監控</h1>
        </div>
    </div>
    
    <!-- 系統狀態卡片 -->
    <div class="row">
        <!-- 平均響應時間 -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                平均響應時間
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Monitoring.AvgResponseTime</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 每秒請求數 -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                每秒請求數
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Monitoring.RequestsPerSecond</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tachometer-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 錯誤率 -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                錯誤率
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Monitoring.ErrorRate</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 系統狀態 -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                系統狀態
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">正常</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- 監控圖表 -->
    <div class="row">
        <!-- 響應時間趨勢 -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">響應時間趨勢</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="responseTimeChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- 系統資源使用率 -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">系統資源使用率</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="resourceChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fas fa-circle text-primary"></i> CPU
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-success"></i> 記憶體
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-info"></i> 磁碟
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- 詳細監控信息 -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">服務狀態</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>服務名稱</th>
                                    <th>狀態</th>
                                    <th>運行時間</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Web服務</td>
                                    <td><span class="badge badge-success">運行中</span></td>
                                    <td>2天 14小時</td>
                                </tr>
                                <tr>
                                    <td>數據庫服務</td>
                                    <td><span class="badge badge-success">運行中</span></td>
                                    <td>2天 14小時</td>
                                </tr>
                                <tr>
                                    <td>快取服務</td>
                                    <td><span class="badge badge-success">運行中</span></td>
                                    <td>2天 14小時</td>
                                </tr>
                                <tr>
                                    <td>郵件服務</td>
                                    <td><span class="badge badge-warning">維護中</span></td>
                                    <td>1天 8小時</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">最近日誌</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>時間</th>
                                    <th>級別</th>
                                    <th>訊息</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2025-01-09 17:30</td>
                                    <td><span class="badge badge-info">INFO</span></td>
                                    <td>用戶登入成功</td>
                                </tr>
                                <tr>
                                    <td>2025-01-09 17:25</td>
                                    <td><span class="badge badge-warning">WARN</span></td>
                                    <td>數據庫連接池接近上限</td>
                                </tr>
                                <tr>
                                    <td>2025-01-09 17:20</td>
                                    <td><span class="badge badge-success">SUCCESS</span></td>
                                    <td>備份任務完成</td>
                                </tr>
                                <tr>
                                    <td>2025-01-09 17:15</td>
                                    <td><span class="badge badge-info">INFO</span></td>
                                    <td>系統啟動完成</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 響應時間趨勢圖表
        var ctx = document.getElementById("responseTimeChart");
        var responseTimeChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["00:00", "04:00", "08:00", "12:00", "16:00", "20:00", "24:00"],
                datasets: [{
                    label: "響應時間 (ms)",
                    lineTension: 0.3,
                    backgroundColor: "rgba(78, 115, 223, 0.05)",
                    borderColor: "rgba(78, 115, 223, 1)",
                    pointRadius: 3,
                    pointBackgroundColor: "rgba(78, 115, 223, 1)",
                    pointBorderColor: "rgba(78, 115, 223, 1)",
                    pointHoverRadius: 3,
                    pointHoverBackgroundColor: "rgba(78, 115, 223, 1)",
                    pointHoverBorderColor: "rgba(78, 115, 223, 1)",
                    pointHitRadius: 10,
                    pointBorderWidth: 2,
                    data: [120, 135, 110, 125, 130, 115, 120],
                }],
            },
            options: {
                maintainAspectRatio: false,
                layout: {
                    padding: {
                        left: 10,
                        right: 25,
                        top: 25,
                        bottom: 0
                    }
                },
                scales: {
                    xAxes: [{
                        time: {
                            unit: 'hour'
                        },
                        gridLines: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            maxTicksLimit: 7
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            maxTicksLimit: 5,
                            padding: 10,
                        },
                        gridLines: {
                            color: "rgb(234, 236, 244)",
                            zeroLineColor: "rgb(234, 236, 244)",
                            drawBorder: false,
                            borderDash: [2],
                            zeroLineBorderDash: [2]
                        }
                    }],
                },
                legend: {
                    display: false
                },
                tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    titleMarginBottom: 10,
                    titleFontColor: '#6e707e',
                    titleFontSize: 14,
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    intersect: false,
                    mode: 'index',
                    caretPadding: 10,
                }
            }
        });
        
        // 系統資源使用率圖表
        var ctx = document.getElementById("resourceChart");
        var resourceChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ["CPU", "記憶體", "磁碟"],
                datasets: [{
                    data: [45, 30, 25],
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc'],
                    hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf'],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }],
            },
            options: {
                maintainAspectRatio: false,
                tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    caretPadding: 10,
                },
                legend: {
                    display: false
                },
                cutoutPercentage: 80,
            },
        });
    </script>
}