                        <div class="chat-info">
                            <div class="chat-name">@otherUser.UserName</div>
                            <div class="chat-last-message">
                                @if (lastMessage != null)
                                {
                                    @if (lastMessage.MessageType == "Text")
                                    {
                                        @lastMessage.MessageContent
                                    }
                                    else
                                    {
                                        @($"[{lastMessage.MessageType}]")
                                    }
                                }
                                else
                                {
                                    <span style="color:var(--muted); font-style:italic;">é–‹å§‹å°è©±...</span>
                                }
                            </div>
                        </div>
                        <div class="chat-meta">
                            @if (conversation.LastMessageAt.HasValue)
                            {
                                <div class="chat-time">
                                    @conversation.LastMessageAt.Value.ToString("HH:mm")
                                </div>
                            }
                            @if (unreadCount > 0)
                            {
                                <div class="chat-unread">@unreadCount</div>
                            }
                        </div>
                    </div>
