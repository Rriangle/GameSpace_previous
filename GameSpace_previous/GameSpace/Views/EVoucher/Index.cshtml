@model IEnumerable<GameSpace.Models.EVoucher>
@{
    ViewData["Title"] = "我的電子禮券 - GameSpace";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>我的電子禮券 - GameSpace</title>
    <style>
        :root{
            --bg:#eef3f8; --bg2:#ffffff; --ink:#1f2937; --muted:#64748b; --line:#e5e7eb;
            --surface:rgba(255,255,255,.75); --glass:rgba(255,255,255,.45);
            --accent:#7557ff; --accent-2:#34d2ff; --accent-3:#22c55e;
            --radius:18px; --radius-sm:12px; --shadow:0 18px 40px rgba(17,24,39,.12);
            --blur:14px;
        }
        body.dark{
            --bg:#0c111b; --bg2:#0a0f18; --ink:#e5edff; --muted:#9fb1c9; --line:#1e2b43;
            --surface:rgba(22,30,48,.65); --glass:rgba(18,24,39,.50);
            --shadow:0 18px 42px rgba(0,0,0,.35);
        }
        *{box-sizing:border-box} html,body{height:100%}
        body{
            margin:0; color:var(--ink); font:16px/1.65 system-ui,-apple-system,"Segoe UI",Roboto,"Noto Sans TC","PingFang TC","Microsoft JhengHei",sans-serif;
            background:
                radial-gradient(900px 500px at -10% -10%, rgba(117,87,255,.10), transparent 60%),
                radial-gradient(800px 460px at 110% 10%, rgba(52,210,255,.10), transparent 50%),
                linear-gradient(180deg, var(--bg), var(--bg2));
        }
        .wrap{max-width:1200px; margin:0 auto; padding:0 16px}
        
        /* 標題 */
        .page-title{
            font-size:32px; font-weight:900; color:var(--ink); margin:40px 0 30px; text-align:center;
        }
        
        /* 電子禮券卡片 */
        .evoucher-card{
            background:var(--glass); border:1px solid var(--line); border-radius:20px; 
            padding:30px; backdrop-filter:blur(var(--blur)); box-shadow:var(--shadow);
            margin:20px 0; position:relative; overflow:hidden;
        }
        .evoucher-card.used{
            opacity:0.6; background:var(--surface);
        }
        .evoucher-card.expired{
            opacity:0.4; background:var(--surface);
        }
        
        /* 電子禮券代碼 */
        .evoucher-code{
            font-size:24px; font-weight:900; color:var(--accent); margin-bottom:15px;
            font-family: 'Courier New', monospace; letter-spacing:2px;
        }
        
        /* 電子禮券類型 */
        .evoucher-type{
            font-size:20px; font-weight:700; color:var(--ink); margin-bottom:10px;
        }
        
        /* 面額信息 */
        .value-info{
            display:flex; align-items:center; gap:15px; margin:15px 0;
        }
        .value-amount{
            font-size:32px; font-weight:900; color:var(--accent-3);
        }
        .value-currency{
            font-size:18px; color:var(--muted);
        }
        
        /* 使用條件 */
        .usage-conditions{
            background:var(--surface); border-radius:12px; padding:15px; margin:15px 0;
        }
        .condition-item{
            display:flex; justify-content:space-between; margin:8px 0; font-size:14px;
        }
        .condition-label{color:var(--muted)}
        .condition-value{color:var(--ink); font-weight:600}
        
        /* 狀態標籤 */
        .status-badge{
            position:absolute; top:20px; right:20px; padding:8px 16px; border-radius:20px;
            font-size:12px; font-weight:700; text-transform:uppercase;
        }
        .status-badge.available{
            background:var(--accent-3); color:#fff;
        }
        .status-badge.used{
            background:#6b7280; color:#fff;
        }
        .status-badge.expired{
            background:#ef4444; color:#fff;
        }
        
        /* 時間信息 */
        .time-info{
            display:flex; justify-content:space-between; margin-top:20px; padding-top:20px;
            border-top:1px solid var(--line); font-size:14px; color:var(--muted);
        }
        
        /* 空狀態 */
        .empty-state{
            text-align:center; padding:80px 20px; color:var(--muted);
        }
        .empty-icon{font-size:64px; margin-bottom:20px}
        .empty-title{font-size:24px; font-weight:700; margin-bottom:10px; color:var(--ink)}
        .empty-desc{font-size:16px}
        
        /* 操作按鈕 */
        .action-buttons{
            display:flex; gap:10px; margin-top:20px;
        }
        .btn{
            padding:12px 24px; border:none; border-radius:12px; font-weight:700;
            cursor:pointer; transition:all 0.3s ease; text-decoration:none; display:inline-block;
        }
        .btn-primary{
            background:var(--accent); color:#fff;
        }
        .btn-primary:hover{background:#6d28d9; transform:translateY(-2px)}
        .btn-secondary{
            background:var(--surface); color:var(--ink); border:1px solid var(--line);
        }
        .btn-secondary:hover{background:var(--line)}
        .btn:disabled{
            opacity:0.5; cursor:not-allowed; transform:none;
        }
    </style>
</head>
<body>
    <div class="wrap">
        <h1 class="page-title">💳 我的電子禮券</h1>
        
        @if (Model.Any())
        {
            @foreach (var eVoucher in Model)
            {
                var isExpired = eVoucher.ExpiryDate.HasValue && eVoucher.ExpiryDate < DateTime.Now;
                var isTypeExpired = eVoucher.EVoucherType.ValidTo < DateTime.Now;
                var isUsed = eVoucher.IsUsed;
                var statusClass = isUsed ? "used" : (isExpired || isTypeExpired ? "expired" : "");
                var statusText = isUsed ? "已使用" : (isExpired || isTypeExpired ? "已過期" : "可使用");
                var statusBadgeClass = isUsed ? "used" : (isExpired || isTypeExpired ? "expired" : "available");
                
                <div class="evoucher-card @statusClass">
                    <div class="status-badge @statusBadgeClass">@statusText</div>
                    
                    <div class="evoucher-code">@eVoucher.EVoucherCode</div>
                    <div class="evoucher-type">@eVoucher.EVoucherType.TypeName</div>
                    
                    @if (!string.IsNullOrEmpty(eVoucher.EVoucherType.Description))
                    {
                        <div style="color:var(--muted); margin-bottom:15px;">@eVoucher.EVoucherType.Description</div>
                    }
                    
                    <div class="value-info">
                        <div class="value-amount">NT$ @eVoucher.EVoucherType.Value:N0</div>
                        <div class="value-currency">@eVoucher.EVoucherType.Currency</div>
                    </div>
                    
                    <div class="usage-conditions">
                        <div class="condition-item">
                            <span class="condition-label">面額</span>
                            <span class="condition-value">NT$ @eVoucher.EVoucherType.Value:N0</span>
                        </div>
                        <div class="condition-item">
                            <span class="condition-label">類型有效期</span>
                            <span class="condition-value">@eVoucher.EVoucherType.ValidTo.ToString("yyyy/MM/dd")</span>
                        </div>
                        @if (eVoucher.ExpiryDate.HasValue)
                        {
                            <div class="condition-item">
                                <span class="condition-label">個人有效期</span>
                                <span class="condition-value">@eVoucher.ExpiryDate.Value.ToString("yyyy/MM/dd")</span>
                            </div>
                        }
                    </div>
                    
                    <div class="time-info">
                        <div>獲得時間: @eVoucher.AcquiredTime.ToString("yyyy/MM/dd HH:mm")</div>
                        @if (eVoucher.UsedTime.HasValue)
                        {
                            <div>使用時間: @eVoucher.UsedTime.Value.ToString("yyyy/MM/dd HH:mm")</div>
                        }
                    </div>
                    
                    @if (!isUsed && !isExpired && !isTypeExpired)
                    {
                        <div class="action-buttons">
                            <button class="btn btn-primary" onclick="useEVoucher(@eVoucher.EVoucherId)">
                                立即使用
                            </button>
                            <button class="btn btn-secondary" onclick="copyEVoucherCode('@eVoucher.EVoucherCode')">
                                複製代碼
                            </button>
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">💳</div>
                <div class="empty-title">暫無電子禮券</div>
                <div class="empty-desc">您還沒有任何電子禮券，快去參加活動獲得吧！</div>
            </div>
        }
    </div>

    <script>
        function useEVoucher(eVoucherId) {
            if (confirm('確定要使用這張電子禮券嗎？')) {
                // 這裡應該跳轉到結帳頁面或處理使用邏輯
                alert('電子禮券使用功能開發中...');
            }
        }
        
        function copyEVoucherCode(code) {
            navigator.clipboard.writeText(code).then(function() {
                alert('電子禮券代碼已複製到剪貼板！');
            }, function(err) {
                console.error('複製失敗: ', err);
                alert('複製失敗，請手動複製：' + code);
            });
        }
    </script>
</body>
</html>