<div class="chat-container" id="chatContainer">
    <!-- Header -->
    <div class="chat-header" id="chatHeader">
        <span id="chatTitle">Chat Room</span>
        <span id="userDisplay" style="margin-left:10px; font-weight:normal; font-size:0.85rem;"></span>
        <div class="chat-controls">
            <button class="minimize">–</button>
            <button class="maximize">⬜</button>
            <button class="close">×</button>
        </div>
    </div>

    <!-- Chat window -->
    <div class="chat-window">
        <!-- Login Area -->
        <div id="loginArea" class="login-area">
            <h3 class="text-center mb-2">Chat Room Login</h3>
            <input id="userNameInput" placeholder="Enter your name" />
            <button id="loginBtn">Login</button>
        </div>

        <!-- Chat Area -->
        <div id="chatArea" class="chat-area" style="display:none;">
            <!-- Messages Area -->
            <div class="messages" id="messages"></div>

            <!-- Input Area -->
            <form id="chatForm" class="input-form">
                <input type="text" id="messageInput" placeholder="Enter message..." autocomplete="off" />
                <button type="submit">Send</button>
            </form>
        </div>
    </div>

    <!-- Resize Handle -->
    <div class="resize-handle"></div>
</div>
