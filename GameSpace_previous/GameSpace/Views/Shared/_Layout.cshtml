<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - GameSpace</title>

    <!-- Bootstrap 5 & FontAwesome -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    
    <!-- Custom Styles following index.txt guidelines -->
    <style>
        :root {
            --bg: #eef3f8;
            --bg2: #ffffff;
            --ink: #1f2937;
            --muted: #64748b;
            --line: #e5e7eb;
            --surface: rgba(255, 255, 255, 0.75);
            --glass: rgba(255, 255, 255, 0.45);
            --accent: #7557ff;
            --accent-2: #34d2ff;
            --accent-3: #22c55e;
            --radius: 18px;
            --radius-sm: 12px;
            --shadow: 0 18px 40px rgba(17, 24, 39, 0.12);
            --blur: 14px;
        }

        body.dark {
            --bg: #0c111b;
            --bg2: #0a0f18;
            --ink: #e5edff;
            --muted: #9fb1c9;
            --line: #1e2b43;
            --surface: rgba(22, 30, 48, 0.65);
            --glass: rgba(18, 24, 39, 0.50);
            --shadow: 0 18px 42px rgba(0, 0, 0, 0.35);
        }

        * {
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            color: var(--ink);
            font: 16px/1.65 system-ui, -apple-system, "Segoe UI", Roboto, "Noto Sans TC", "PingFang TC", "Microsoft JhengHei", sans-serif;
            background:
                radial-gradient(900px 500px at -10% -10%, rgba(117, 87, 255, 0.10), transparent 60%),
                radial-gradient(800px 460px at 110% 10%, rgba(52, 210, 255, 0.10), transparent 50%),
                linear-gradient(180deg, var(--bg), var(--bg2));
            min-height: 100vh;
        }

        /* Navigation */
        .navbar {
            background: var(--glass) !important;
            backdrop-filter: blur(var(--blur));
            border-bottom: 1px solid var(--line);
            box-shadow: var(--shadow);
        }

        .navbar-brand {
            font-weight: 900;
            color: var(--ink) !important;
            font-size: 1.5rem;
        }

        .nav-link {
            color: var(--ink) !important;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            color: var(--accent) !important;
            transform: translateY(-2px);
        }

        /* Main Content */
        .main-content {
            min-height: calc(100vh - 76px);
            padding: 2rem 0;
        }

        /* Cards */
        .card {
            background: var(--glass);
            border: 1px solid var(--line);
            border-radius: var(--radius);
            backdrop-filter: blur(var(--blur));
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }

        /* Buttons */
        .btn {
            border-radius: var(--radius-sm);
            font-weight: 700;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--accent), #3b82f6);
            color: #fff;
            box-shadow: var(--shadow);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(117, 87, 255, 0.4);
        }

        .btn-secondary {
            background: var(--surface);
            color: var(--ink);
            border: 2px solid var(--line);
        }

        .btn-secondary:hover {
            background: var(--line);
            color: var(--ink);
        }

        /* Forms */
        .form-control {
            background: var(--surface);
            border: 2px solid var(--line);
            border-radius: var(--radius-sm);
            color: var(--ink);
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: var(--glass);
            border-color: var(--accent);
            box-shadow: 0 0 0 0.2rem rgba(117, 87, 255, 0.25);
        }

        /* Footer */
        .footer {
            background: var(--glass);
            backdrop-filter: blur(var(--blur));
            border-top: 1px solid var(--line);
            color: var(--muted);
            padding: 2rem 0;
            margin-top: auto;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .main-content {
                padding: 1rem 0;
            }
        }

        /* Dark mode toggle */
        .theme-toggle {
            background: var(--surface);
            border: 2px solid var(--line);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .theme-toggle:hover {
            background: var(--line);
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-gamepad me-2"></i>GameSpace
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home me-1"></i>首頁</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Shop"><i class="fas fa-store me-1"></i>商城</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Game"><i class="fas fa-gamepad me-1"></i>小遊戲</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Pet"><i class="fas fa-paw me-1"></i>我的寵物</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Forum"><i class="fas fa-comments me-1"></i>論壇</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Wallet"><i class="fas fa-wallet me-1"></i>錢包</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Coupon"><i class="fas fa-ticket-alt me-1"></i>優惠券</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/EVoucher"><i class="fas fa-gift me-1"></i>電子禮券</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/CheckIn"><i class="fas fa-calendar-check me-1"></i>每日簽到</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Auth/Login"><i class="fas fa-sign-in-alt me-1"></i>登入</a>
                    </li>
                    <li class="nav-item">
                        <div class="theme-toggle ms-2" onclick="toggleTheme()">
                            <i class="fas fa-moon" id="theme-icon"></i>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3">GameSpace</h5>
                    <p class="mb-0">一個充滿樂趣的遊戲平台，讓你在遊戲中獲得更多驚喜！</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h6 class="mb-3">快速連結</h6>
                    <div class="d-flex flex-wrap justify-content-md-end gap-3">
                        <a href="/" class="text-decoration-none text-muted">首頁</a>
                        <a href="/Shop" class="text-decoration-none text-muted">商城</a>
                        <a href="/Game" class="text-decoration-none text-muted">小遊戲</a>
                        <a href="/Pet" class="text-decoration-none text-muted">寵物</a>
                        <a href="/Forum" class="text-decoration-none text-muted">論壇</a>
                    </div>
                </div>
            </div>
            <hr class="my-4" style="border-color: var(--line);">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <small>&copy; 2024 GameSpace. 版權所有.</small>
                </div>
                <div class="col-md-6 text-md-end">
                    <small>
                        <a href="#" class="text-decoration-none text-muted me-3">隱私政策</a>
                        <a href="#" class="text-decoration-none text-muted">服務條款</a>
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <!-- Theme Toggle Script -->
    <script>
        // Theme toggle functionality
        function toggleTheme() {
            document.body.classList.toggle('dark');
            const themeIcon = document.getElementById('theme-icon');
            if (document.body.classList.contains('dark')) {
                themeIcon.className = 'fas fa-sun';
                localStorage.setItem('theme', 'dark');
            } else {
                themeIcon.className = 'fas fa-moon';
                localStorage.setItem('theme', 'light');
            }
        }

        // Load saved theme
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                document.body.classList.add('dark');
                document.getElementById('theme-icon').className = 'fas fa-sun';
            }
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>